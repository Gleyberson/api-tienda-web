<h1>Productos en tiempo real</h1>

<section>
  <h2>Crear producto (vía WebSocket)</h2>
  <form id="createForm">
    <div><label>Título <input name="title" required /></label></div>
    <div><label>Descripción <input name="description" /></label></div>
    <div><label>Precio <input name="price" type="number" step="0.01" /></label></div>
    <div><label>Código <input name="code" /></label></div>
    <div><label>Stock <input name="stock" type="number" /></label></div>
    <div><label>Categoría <input name="category" /></label></div>
    <div><label>Miniaturas (URLs separadas por coma)
      <input name="thumbnails" placeholder="/imgs/zap1.png, /imgs/zap2.png" />
    </label></div>
    <div>
      <label>Estado
        <select name="status">
          <option value="">(sin definir)</option>
          <option value="true">verdadero</option>
          <option value="false">falso</option>
        </select>
      </label>
    </div>
    <button type="submit">Crear</button>
    <div id="createMsg"></div>
  </form>
</section>

<section>
  <h2>Productos (en vivo)</h2>
  <ul id="productList">
    {{#each products}}
      <li data-id="{{this.id}}">
        <strong>{{this.title}}</strong>
        <small>ID: {{this.id}}</small>
        {{#if this.price}} - ${{this.price}} {{/if}}
        <button class="btn-delete" data-id="{{this.id}}">Eliminar</button>
      </li>
    {{/each}}
  </ul>
</section>

<script defer src="/js/realtime.js"></script>